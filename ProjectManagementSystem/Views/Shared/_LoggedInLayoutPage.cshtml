<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <style type="text/css">
      body {
        padding-top: 60px;
        padding-bottom: 40px;
      }
      .sidebar-nav {
        padding: 9px 0;
      }
    </style>

    <script type="text/javascript" src="~/Content/scripts/jquery-1.9.1.min.js"></script>

    <script type="text/javascript" src="~/Content/scripts/editUser.js"></script>
    <script type="text/javascript" src="~/Content/scripts/editTask.js"></script>
    <script type="text/javascript" src="~/Content/scripts/selectTask.js"></script>
    <script type="text/javascript" src="~/Content/scripts/addTaskToProject.js"></script>
    <script type="text/javascript" src="~/Content/scripts/generateIteration.js"></script>
    <script type="text/javascript" src="~/Content/scripts/ShowCurrentIterationForProject.js"></script>


    <link href="~/Content/bootstrap/css/bootstrap.css" rel="stylesheet">
    <link href="~/Content/bootstrap/css/bootstrap-responsive.min.css" rel="stylesheet">
    <script type="text/javascript" src="~/Content/bootstrap/js/bootstrap.js"></script>
    
    
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container-fluid">
                <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="brand" href="#">Project management system</a>
                <div class="nav-collapse collapse">
                    <p class="navbar-text pull-right">
                        Logged in as <a href="#" class="navbar-link">@PageContext.Page.User.Identity.Name</a>
                    </p>
                    <ul class="nav">
                        <li class="active"><a href="/Authentication/SignOut">logout</a></li>
                    </ul>
                </div>
                <!--/.nav-collapse -->
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span3">
                <div class="well sidebar-nav">
                    <ul class="nav nav-list">
                        <li class="nav-header">Common</li>
                        <li><a href="/SharedLoggedIn/Welcome">Main Page</a></li>
                        @if (HttpContext.Current.User.IsInRole("Programmer")){
                        <li class="nav-header">Programmer</li>
                        <li><a href="/Programmer/SelectTask">Select Task</a></li>
                        <li><a href="/Programmer/MarkTaskAsSolved">Mark Task As Solved</a></li>
                        }
                        @if (HttpContext.Current.User.IsInRole("Admin")){
                        <li class="nav-header">Administator</li>
                        <li><a href="/Admin/AddNewUser">Add New User</a></li>
                        <li><a href="/Admin/EditUser">Edit User</a></li>
                        <li><a href="/Admin/EditTask">Edit Task</a></li>
                        }
                        @if (HttpContext.Current.User.IsInRole("Manager")){
                        <li class="nav-header">Manager</li>
                        <li><a href="/Manager/CreateNewProject">Create New Project</a></li>
                        <li><a href="/Manager/AddNewTaskToProject">Add New Task To Project</a></li>
                        <li><a href="/Manager/GenerateIteration">Generate Iteration</a></li>
                        <li><a href="/Manager/ShowCurrentIterationForProject">Show Iterations</a></li>
                        }
                    </ul>
                </div>
                <!--/.well -->
            </div>
            <!--/span-->
            <div class="span9">
                <div class="row-fluid">
                    <div class="span9">
                        @RenderBody()
                    </div>
                    <!--/span-->
                </div>
                <!--/row-->
            </div>
            <!--/span-->
        </div>
        <!--/row-->

        <hr>

        <footer>
        <p>&copy; Credits Final Project United 2013</p>
      </footer>

    </div>
    <!--/.fluid-container-->
</body>
</html>

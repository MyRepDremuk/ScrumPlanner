@{
    Layout = "~/Views/Shared/_LoggedInLayoutPage.cshtml";
}
@model  ProjectManagementSystem.Models.TasksListModel

<h1>Edit Task</h1>

@if (Model.AllTasks.Count > 0){
    
<div id="content-container">
    <label>Select New Task </label>
    @Html.DropDownListFor(m=>m.AllTasks, new SelectList(Model.AllTasks, "Value", "Text"))
    <br />
    <button id="btnSelectTask" type="button" class="btn">Select</button>
    <div id="edit-task-container">
        <label>New Description </label><input type="text" id="newDescription" />
        <label>New Profit </label><input type="text" id="newProfit" />
        <label>New Time </label><input type="text" id="newTime" />
        <br/>
        <button id="btnEditTask" type="button" class="btn">Change</button>
    </div>
    <div id="reset-task-container">
        <label>Task was successfuly edited </label>
        <button id="ResetTaskForm" type="button" class="btn">Edit Another Task</button>
    </div>
</div>
}else{
    <text>No tasks to edit. Please try again later...</text>
}